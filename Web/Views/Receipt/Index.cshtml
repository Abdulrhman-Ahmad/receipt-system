@model List<Receipt>

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning fs-4 text-center">
        @TempData["Message"]
    </div>
}

<h1 class="text-center">My Receipts</h1>

<a asp-action="Index" asp-controller="Item" class="btn btn-success my-1 py-2">Add Item to Receipt</a>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th class="text-center">ID</th>
            <th class="text-center">Released</th>
            <th class="text-center">Total Amount</th>
            <th class="text-center">Paid Amount</th>
            <th class="text-center">Remaining Amount</th>
            <th class="text-center">Status</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            if(item.TotalAmount != 0)
            {
                <tr>
                    <td class="text-center">
                        @item.Id
                    </td>
                    <td class ="text-center">
                        @item.ReleasedDate
                    </td >
                    <td class="text-center">
                        $@item.TotalAmount
                    </td>
                    <td class="text-center">
                        <div class="input-group-text">$@item.PaidAmount</div>
                    </td>
                    <td class="text-center">
                        $@(item.TotalAmount - item.PaidAmount)
                    </td>
                    <td class="text-center">
                        @if(item.TotalAmount == item.PaidAmount)
                        {
                            <div class="input-group-text text-danger display-6 fw-bold">
                                    Completed
                            </div>
                        }else
                        {
                            <div class="input-group-text text-success display-6 fw-bold">
                                Not Completed
                            </div>
                        }
                    </td>
                    <td class="text-center">
                        <!-- Button trigger modal -->
                        @if(item.TotalAmount == item.PaidAmount)
                        {
                            <button disabled type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal@(item.Id)">
                                Pay
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal@(item.Id)">
                                Pay
                            </button>
                        }
                        <!-- Modal -->
                        <div class="modal fade" id="modal@(item.Id)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Receipt Num #@(item.Id)</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    
                                    <form asp-action="PayReceipt" asp-controller="Payment" method="post">
                                        <div class="modal-body">
                                            <label for="amount-input@(item.Id)">Amount $</label>

                                            <!-- Input Amount -->
                                            <input hidden name="ReceiptId" value="@item.Id" />
                                            <input type="text" name="Amount" 
                                                value="@(item.TotalAmount - item.PaidAmount)" 
                                                id="amount-input@(item.Id)"/>

                                            <label for="amount-input@(item.Id)">Max amount @(item.TotalAmount - item.PaidAmount)</label>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                                            
                                            <button type="submit" class="btn btn-success" >Confirm</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <form asp-action="Receipt" asp-controller="Payment" method="post" class="d-inline">
                            <input hidden name="receiptId" value="@item.Id" />
                            <button class="btn btn-dark">Show Payments</button>
                        </form>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>





