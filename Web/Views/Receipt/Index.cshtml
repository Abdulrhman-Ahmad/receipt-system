@model List<Receipt>

<h1 class="text-center">My Receipts</h1>

<a class="btn btn-success my-1 py-2">Create New Receipt</a>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>ID</th>
            <th>Released</th>
            <th>Total Amount</th>
            <th>Remaining Amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            if(item.TotalAmount != 0)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.ReleasedDate
                    </td>
                    <td>
                        @item.TotalAmount
                    </td>
                    <td>
                        @(item.TotalAmount - item.PaidAmount)
                    </td>
                    <td>
                        Not Completed
                    </td>
                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modal@(item.Id)">
                            Pay
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="modal@(item.Id)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Receipt Num #@(item.Id)</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <label for="amount-input@(item.Id)">Amount $</label>
                                        <input type="number" id="amount-input@(item.Id)" max="@(item.TotalAmount - item.PaidAmount)" />
                                        <label for="amount-input@(item.Id)">Max amount @(item.TotalAmount - item.PaidAmount)</label>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
                                        <button type="button" class="btn btn-success">Confirm</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>





