@model List<Receipt>

<h1 class="text-center">My Receipts</h1>

<a class="btn btn-success my-1 py-2">Create New Receipt</a>
<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light">
        <tr>
            <th>ID</th>
            <th>Released</th>
            <th>Total Amount</th>
            <th>Remaining Amount</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            if(item.TotalAmount != 0)
            {

                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.ReleasedDate
                    </td>
                    <td>
                        @item.TotalAmount
                    </td>
                    <td>
                        @(item.TotalAmount - item.PaidAmount)
                    </td>
                    <td>
                        Not Completed
                    </td>
                    <td>
                        <a class="btn btn-success">Pay</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>