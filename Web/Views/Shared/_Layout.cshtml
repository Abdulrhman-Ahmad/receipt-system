<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Application"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="m-0">

    <div class="d-flex flex-column min-vh-100">

        <header class="mb-3 border-bottom bg-dark text-white py-3">
            <div class="container">
                <div class="row">

                    <!--Brand-->
                    <div class="col-lg-4 d-flex align-items-center display-5 fw-bold fst-italic">
                        Web Store
                    </div>

                    <!--Main Nav-->
                    <div class="col-lg-4 d-flex flex-wrap align-items-center justify-content-center">

                            <div><a asp-controller="Home" asp-action="Index" class="btn btn-dark mx-1 nav-link p-2 text-white">Home</a></div>
                            <div><a asp-controller="Category" asp-action="Index" class="btn btn-dark mx-1 nav-link p-2 text-white">Category</a></div>
                            <div><a asp-controller="Item" asp-action="Index" class="btn btn-dark mx-1 nav-link p-2 text-white">Items</a></div>

                    </div>

                    <!--Account Info-->
                    <div class="col-lg-4 d-flex justify-content-end align-items-center">
                        @Html.Partial("_LoginPartial.cshtml")
                    </div>

                </div>
            </div>
        </header>


        <div class="flex-grow-1 container-fluid row my-4">

                <div>
                @RenderBody()
                </div>

        </div>

        <footer class="py-3 bg-dark">
            <ul class="nav justify-content-center border-bottom pb-3">
                <li class="nav-item"><a href="/Home/Home" class="nav-link px-2 btn btn-dark text-white">Home</a></li>
                <li class="nav-item"><a class="nav-link px-2 btn btn-dark text-white">Features</a></li>
                <li class="nav-item"><a class="nav-link px-2 btn btn-dark text-white">Pricing</a></li>
                <li class="nav-item"><a class="nav-link px-2 btn btn-dark text-white">FAQs</a></li>
                <li class="nav-item"><a class="nav-link px-2 btn btn-dark text-white">About</a></li>
            </ul>
            <p class="text-center text-white">© 2023 Company, Inc</p>
        </footer>

    </div>
 
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/HomeAjaxCall.js"></script>

    @* load jquery validation libraries *@
    @Html.Partial("_PartialView.cshtml")


    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
